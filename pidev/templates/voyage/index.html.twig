{% extends 'base.html.twig' %}

{% block title %}Voyage index{% endblock %}

{% block body %}
    <h1>Voyage index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idv</th>
                <th>Pays</th>
                <th>ImagePays</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for voyage in voyages %}
            <tr>
                <td>{{ voyage.idv }}</td>
                <td>{{ voyage.pays }}</td>
                <td>{{ voyage.imagePays }}</td>
                <td>
                    <a href="{{ path('app_voyage_show', {'idv': voyage.idv}) }}">show</a>
                    <a href="{{ path('app_voyage_edit', {'idv': voyage.idv}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_voyage_new') }}">Create new</a>
{% endblock %}
